{
  "name": "@melchor629/eslint-config",
  "version": "0.3.0",
  "author": "melchor629",
  "license": "MIT",
  "description": "Personal eslint configuration for own projects.",
  "homepage": "https://github.com/melchor629/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/melchor629/eslint-config/issues"
  },
  "funding": "https://ko-fi.com/melchor629",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melchor629/eslint-config.git"
  },
  "type": "module",
  "exports": "./dist/config.js",
  "types": "./src/index.ts",
  "files": [
    "./src/**",
    "./dist/**",
    "./LICENSE"
  ],
  "engines": {
    "node": ">=22.18.0 || >=24"
  },
  "scripts": {
    "check": "run-p check:*",
    "check:eslint": "eslint",
    "check:tsc": "tsc",
    "check:knip": "knip",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --packages=external --outfile=./dist/config.js",
    "test": "run-p check:*"
  },
  "dependencies": {
    "@eslint/js": "^9.0.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "neostandard": "^0.12.0",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "knip": "^5.36.3",
    "npm-run-all2": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
